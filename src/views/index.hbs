<div class="container mt-3">
  <div class="row">
    <div class="col-sm-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
      <h4 class="text-center">Welcome to Engineers.SG Auth Service</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6 offset-md-3">
      <form action="/auth/login" method="post">
        <div class="form-group">
          <label for="emailField">Email address</label>
          <input type="email" class="form-control" id="emailField" name="email" placeholder="Enter email">
        </div>

        <div class="form-group">
          <label for="passwordField">Password</label>
          <input type="password" class="form-control" id="passwordField" name="password" placeholder="Password">
        </div>

        <button type="submit" class="btn btn-primary btn-lg">Login</button>
      </form>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-sm-12 col-md-6 offset-md-3 text-center">
      <a href="/auth/github" class="btn btn-secondary bg-github btn-lg" role="button" aria-disabled="true">
        <i class="fa fa-github"></i> Login with GitHub
      </a>
      <a href="/auth/twitter" class="btn btn-secondary bg-twitter btn-lg" role="button" aria-disabled="true">
        <i class="fa fa-twitter"></i> Login with Twitter
      </a>
    </div>
  </div>
</div>

